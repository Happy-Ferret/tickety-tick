{
  "name": "#{NAME}",
  "version": "#{VERSION}",
  "description": "#{DESCRIPTION}",
  "icons": { "128": "icon.png" },
  "background": { "scripts": ["background.js"] },
  "content_scripts": [
    {
     "matches": [
       "http://*.pivotaltracker.com/*",
       "https://*.pivotaltracker.com/*"
     ],
      "js": ["ticketsystems/pivotal.js", "dist/jquery.js"]
    },
    {
     "matches": [
       "http://*.atlassian.net/*",
       "https://*.atlassian.net/*"
     ],
      "js": ["ticketsystems/jira.js", "dist/jquery.js"]
    }
  ],
  "web_accessible_resources": [
    "dist/jquery.map"
  ],
  "permissions": [
    "tabs"
  ],
  "page_action": {
    "default_name": "Git Branch/Message",
    "default_icon": "icon.png",
    "default_popup": "popup/popup.html"
  },
  "manifest_version": 2,
  "content_security_policy": "default-src 'none'; style-src 'self'; script-src 'self';"
}
