{
  "name": "bitcrowd-git",
  "version": "0.1.0",
  "description": "Create branches and git messages based on ticket names",
  "icons": { "128": "icon.png" },
  "background": { "scripts": ["background.js"] },
  "content_scripts": [
    {
     "matches": [
       "http://*.pivotaltracker.com/*",
       "https://*.pivotaltracker.com/*"
     ],
      "js": ["ticketsystems/pivotal.js", "bower_components/jquery/dist/jquery.min.js"]
    },
    {
     "matches": [
       "http://*.atlassian.net/*",
       "https://*.atlassian.net/*"
     ],
      "js": ["ticketsystems/jira.js", "bower_components/jquery/dist/jquery.min.js"]
    }
  ],
  "web_accessible_resources": [
    "bower_components/jquery/dist/jquery.min.map"
  ],
  "permissions": [
    "tabs"
  ],
  "page_action": {
    "default_name": "Git Branch/Message",
    "default_icon": "marker.png",
    "default_popup": "popup.html"
  },
  "manifest_version": 2,
  "content_security_policy": "default-src 'none'; style-src 'self'; script-src 'self';"
}
